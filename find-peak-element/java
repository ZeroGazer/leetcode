class Solution {
    public int findPeakElement(int[] nums) {
        if (nums.length == 1) {
            return 0;
        }
        
        int l = 0, r = nums.length - 1;
        while (l < r) {
            int m = l + (r - l) / 2;
            if (m != nums.length - 1) {
                if (nums[m] < nums[m + 1]) {
                    l = m + 1;
                } else {
                    r = m;
                }
            } else {
                r = m;
            }
        }
        return l;
    }
}