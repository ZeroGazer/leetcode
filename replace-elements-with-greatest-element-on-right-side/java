import java.lang.Math;

class Solution {
    public int[] replaceElements(int[] arr) {
        int max = arr[arr.length - 1];
        arr[arr.length - 1] = -1;
        
        if (arr.length > 1) {
            for (int i = arr.length - 2; i > -1; i--) {
                int cur = arr[i];
                arr[i] = max;
                max = Math.max(max, cur);
            }
        }
        
        return arr;
    }
}